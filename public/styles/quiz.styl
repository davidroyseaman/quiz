color1(alpha = 1.0)
  rgba(200,200,192,alpha)

color2(alpha = 1.0)
  rgba(100,100,96,alpha)

// General reusable
.btn
  display: block
  background-color: color1(0.3)
  padding: 12px
  margin-top: 12px
  margin-bottom: 12px
  font-size: 24px
  cursor: pointer
  text-align: center
  color: color2(0.5)
  box-shadow: inset 0px 0px 8px color1(0.5)
  &:hover
    background-color: color1(0.6)
    color: color2(0.8)

// flex stuff
.flex
  display: flex
  flex-wrap: wrap  
.flex-row
  display: flex
  flex-wrap: wrap
  flex-direction: row
.flex-column
  display: flex
  flex-wrap: wrap  
  flex-direction: column

.flex, .flex-row, .flex-column
  .item
    flex-grow: 1


ul
  padding: 0px
  list-style: none

html
  background-image: url(/images/spbgs/subtle_white_feathers.png)

body
  //padding-top: 70px // Move content down below the fixed header
  color: color1()
  font-family: "Helvetica Neue",Helvetica,Arial,sans-serif

a
  text-decoration: none

a:hover
  text-decoration: underline

h1
  font-size: 48px
  margin: 32px

h2
  font-size: 32px
  margin: 16px

.content
  margin: 0px auto
  padding: 0px
  max-width: 600px
  
  h1, h2, h3, h4
    text-align: center

ul.game-list
  overflow-x: hidden
  overflow-y: auto
  color: color2(0.5)

  li
    overflow: hidden
    .title
      float: left
    .state
      float: right
    

.new-game-container
  color: color2(0.5)
  

.newgame
  .form
    input
      display: block
      box-sizing: border-box
      width: 100%
      font-size: 32px
      padding: 4px
      background-color: rgba(255,255,255,0)
      box-shadow: inset 0px 0px 8px color1(0.5)
      border: none
      color: color1(1.0)

    ::-webkit-input-placeholder
      color: color1(0.5)
    ::-moz-placeholder
      color: color1(0.5)      



.question
  margin-bottom: 16px
  padding: 4px
  box-shadow: 1px 1px 8px color1(0.8)
  
  input, textarea
    background-color: color1(0.3)
    color: color2(0.5)
    border: none

  .huge
    font-size: 24px
    text-align: center

  .text
    font-size: 24px
  .answer
    font-size: 16px
    background-color: rgba(220,200,192,0.3)
  .answer:first-child
    background-color: rgba(200,220,192,0.3)

  .new-answer
    cursor: pointer
    font-size: 16px
    text-align: center
